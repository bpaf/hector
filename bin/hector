#!/usr/bin/env ruby
# encoding: UTF-8

commands = Dir[File.dirname(__FILE__) + "/hector-*"].map { |filename| filename[/-([^\/]*)$/, 1] }.sort
command = ARGV[0]

if commands.include?(command)
  exec(File.dirname(__FILE__) + "/hector-#{command}", *ARGV[1..-1])
else
  $stderr.puts "usage: hector <#{commands.join(" | ")}> ..."
  exit 1
end
